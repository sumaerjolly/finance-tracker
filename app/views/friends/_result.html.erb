<% if params[:action] == "search" %>
    <%= render 'layouts/messages' %>
<% end %>
<% if @users %>
    <div id = "friend-lookup-results" class = "well results-block col-md-10" >
        <table class = "search-results-table col-md-12">
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><strong>Name: </strong><%= user.full_name%></td>
                        <td><strong>Email: </strong><%= user.email %></td>
                        <td><strong>Profile: </strong><%= link_to "View Profile", "#" , class: "btn btn-sm btn-success" %>
                            <% if current_user.not_friends_with?(user.id) %>
                                <%= link_to "Add Friend", add_friend_path(user: current_user, friend: user), class: "btn btn-sm btn-success", method: :post  %>
                            <% else %>
                                <span class="badge badge-primary">You are already friends</span>
                            <% end %>
                         </td>
                    </tr>
                <% end %>
            </tbody>
        </table >

    </div>
<% end %>